# Node environment
NODE_ENV=development
PORT=3000

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database

# Auth0 OIDC (End-user authentication)
AUTH0_SECRET=your-super-secret-key-min-32-characters-long
AUTH0_BASE_URL=http://localhost:3000
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_ISSUER_BASE_URL=https://your-tenant.auth0.com

# Auth0 M2M (Machine-to-machine API protection)
AUTH0_M2M_DOMAIN=your-tenant.auth0.com
AUTH0_M2M_AUDIENCE=https://your-api-identifier

# Public app URL (for QR codes)
APP_URL=http://localhost:3000
